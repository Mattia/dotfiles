[user]
        email = mattia@mvalzelli.com
        name = Mattia Valzelli
[core]
		excludesfile = ~/.gitignore_global
# Use macOS Keychain to store credentials
[credential]
		helper = osxkeychain
# Colorization
[color]
        branch = auto
        diff = auto
        status = auto
        ui = auto
        pager = true
        interactive = auto
# Diff
[diff "plist"]
        textconv = plutil -convert xml1 -o -
# GPG
[commit]
        gpgSign = true
[gpg]
		program = /usr/local/bin/gpg
# Git LFS		
[filter "lfs"]
		smudge = git-lfs smudge -- %f
		process = git-lfs filter-process
		required = true
		clean = git-lfs clean -- %f